eprint = {9510035v1},
file = {:Users/andrea/Documents/Mendeley Desktop/2009 - Mart{\'{i}}nez-Mekler et al. - Universality of rank-ordering distributions in the arts and sciences.pdf:pdf},
isbn = {1932-6203},
issn = {19326203},
